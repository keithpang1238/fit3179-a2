{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Deaths per 100K people (2019)",
  "width": "container",
  "height": "container",
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "aliceblue"}
    },
    {
      "data": {
        "url": "js/ne_110m.topojson",
        "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
      },
      "mark": {
        "type": "geoshape",
        "color": "#ccc",
        "stroke": "#666",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "data/deaths_by_country_and_cause.csv"
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#000",
        "strokeWidth": 0.5
      },
      "transform": [
        {
          "lookup": "country_code",
          "from": {
            "data": {
              "url": "js/ne_110m.topojson",
              "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                  }
            },    
            "key": "properties.ADM0_ISO"
          },
          "as": "geo"
        }
      ],
      "encoding": {
        "shape": {
          "field":"geo",
          "type":"geojson"
        },
        "color": {
          "field": "Grand Total",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "title": "Deaths per 100K people",
          "bin": {"maxbins": 5},
          "legend": {"orient": "bottom-left"}
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "Grand Total", "type": "quantitative", "title": "Deaths per 100K people", "format": ".1f"}
        ]
      }
    },
    {
      "data": {
        "graticule": {
          "step": [
            30,
            30
          ] 
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#777",
        "strokeWidth": 0.15
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "fontSize": 11,
        "dy": -20,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"value": "Countries with older populations have more per capita deaths"},
        "color": {"value": "black"}
      } 
    }
  ],
  "config": {
    "axis": {"labelFont": "helvetica", "titleFont": "helvetica"},
    "legend": {"labelFont": "helvetica", "titleFont": "helvetica"},
    "header": {"labelFont": "helvetica", "titleFont": "helvetica"},
    "mark": {"font": "helvetica"},
    "title": {"font": "helvetica", "subtitleFont": "helvetica"}
  }
}
